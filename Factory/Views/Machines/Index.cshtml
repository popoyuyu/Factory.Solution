@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
  <h1>Machines</h1>
</div>

@if (@Model.Count == 0)
{
  <p>No machines have been added</p>
}

<ul>
  @foreach (Machine machine in Model)
  {
    @Html.ActionLink($"{machine.MachineName}", "Details", new{ id = machine.MachineId})
  }
</ul>

<p>@Html.ActionLink("Add a Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>