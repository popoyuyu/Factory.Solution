@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;
<div class="jumbotron">
  <h1>Add a new Machine</h1>
</div>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.MachineName)
  @Html.TextBoxFor(model => model.MachineName, new {required = "required"})
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new {required = "required"})
  <br>
  <input type="submit" value="Add Machine" />
}

<p>@Html.ActionLink("Back to Machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>